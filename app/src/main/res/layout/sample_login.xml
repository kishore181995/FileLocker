<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/log"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:text="Login"
                    android:fontFamily="@font/avenir_book"
                    android:gravity="center"
                    android:id="@+id/logTV"
                    android:textStyle="bold"
                    android:layout_alignParentBottom="true"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_height="wrap_content"/>

                <View
                    android:layout_width="30dp"
                    android:id="@+id/viewLog"
                    android:layout_marginTop="5dp"
                    android:layout_height="2dp"
                    android:background="#000000"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/sign"
                android:orientation="vertical"
                android:layout_marginLeft="25dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:text="Sign Up"
                    android:fontFamily="@font/avenir_book"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:id="@+id/signTV"
                    android:layout_alignParentBottom="true"
                    android:textSize="16sp"
                    android:textColor="#b5b5b5"
                    android:layout_height="wrap_content"/>

                <View
                    android:layout_width="30dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/viewSign"
                    android:layout_height="2dp"
                    android:background="#b5b5b5"/>


            </LinearLayout>



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="30dp"
            android:visibility="gone"
            android:id="@+id/signLl">


            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/lock"
                android:layout_gravity="center"
                android:layout_marginTop="70dp"
                android:layout_marginBottom="20dp"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_marginTop="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/emailsignEt"
                android:layout_marginBottom="5dp"
                android:textColor="@color/black"
                android:hint="Email Address"
                android:textColorHint="#c0c0c0"
                android:background="@null"
                android:fontFamily="@font/avenir_book"
                android:textSize="16sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="1.5dp"
                android:background="#000000"/>


            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_marginTop="30dp"
                android:layout_height="wrap_content"
                android:id="@+id/passsignEt"
                android:layout_marginBottom="5dp"
                android:textColor="@color/black"
                android:hint="Password"
                android:textColorHint="#c0c0c0"
                android:background="@null"
                android:inputType="textPassword"
                android:fontFamily="@font/avenir_book"
                android:textSize="16sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="2dp"
                android:background="#000000"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_marginTop="30dp"
                android:layout_height="wrap_content"
                android:id="@+id/confirmpasssignEt"
                android:textColorHint="#c0c0c0"
                android:layout_marginBottom="5dp"
                android:textColor="@color/black"
                android:hint="Confirm Password"
                android:background="@null"
                android:inputType="textPassword"
                android:fontFamily="@font/avenir_book"
                android:textSize="16sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="2dp"
                android:background="#000000"/>



        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="30dp"
            android:id="@+id/loginLl">


            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/lock"
                android:layout_gravity="center"
                android:layout_marginTop="70dp"
                android:layout_marginBottom="20dp"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_marginTop="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/emailEt"
                android:layout_marginBottom="5dp"
                android:textColor="@color/black"
                android:hint="Email Address"
                android:textColorHint="#c0c0c0"
                android:background="@null"
                android:fontFamily="@font/avenir_book"
                android:textSize="16sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="2dp"
                android:background="#000000"/>


            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_marginTop="30dp"
                android:layout_height="wrap_content"
                android:id="@+id/passEt"
                android:layout_marginBottom="5dp"
                android:textColor="@color/black"
                android:hint="Password"
                android:background="@null"
                android:textColorHint="#c0c0c0"
                android:inputType="textPassword"
                android:fontFamily="@font/avenir_book"
                android:textSize="16sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="2dp"
                android:background="#000000"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:id="@+id/forgotTv"
                android:gravity="end"
                android:layout_marginBottom="5dp"
                android:textColor="@color/black"
                android:text="Forgot Password ?"
                android:background="@null"
                android:fontFamily="@font/muli_medium"
                android:textSize="14sp"/>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#dcdcdc"
        android:layout_alignParentBottom="true"/>

    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/login_btn"
        android:layout_marginBottom="25dp"
        android:gravity="center"
        android:id="@+id/buttonLl"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/next"
            android:layout_gravity="center"/>

    </LinearLayout>

</RelativeLayout>